{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 1100,
  "height": 590,
  "signals": [
    {
      "name": "clicked_country",
      "value": null,
      "on": [{"events": "click", "update": "datum.properties.name"}]
    },
    {"name": "has_valid_data", "update": "length(data('filtered_data')) > 0"}
  ],
  "projections": [
    {
      "name": "mercator",
      "type": "mercator",
      "scale": 100,
      "translate": [{"signal": "width / 4"}, {"signal": "height / 2"}]
    }
  ],
  "data": [
    {
      "name": "oceans",
      "url": "https://raw.githubusercontent.com/jarelgomes1/atlasitdp/refs/heads/main/visualization/oceans.topo.json",
      "format": {"type": "topojson", "feature": "oceans"}
    },
    {
      "name": "world",
      "url": "https://raw.githubusercontent.com/jarelgomes1/atlasitdp/refs/heads/main/visualization/countries.json",
      "format": {"type": "topojson", "feature": "countries"}
    },
    {
      "name": "country_data",
      "url": "https://raw.githubusercontent.com/jarelgomes1/atlasitdp/main/Final_Merged_Population_Density_PNRT_Data.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "top_10_countries",
      "source": "country_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Country_Name"],
          "fields": ["People_Near_Rapid_Transit"],
          "ops": ["sum"],
          "as": ["Total_People_Near_Rapid_Transit"]
        },
        {
          "type": "window",
          "sort": {"field": "Total_People_Near_Rapid_Transit", "order": "descending"},
          "ops": ["rank"],
          "as": ["rank"]
        },
        {
          "type": "filter",
          "expr": "datum.rank <= 10"
        },
        {
          "type": "lookup",
          "from": "country_data",
          "key": "Country_Name",
          "fields": ["Country_Name"],
          "values": ["Year", "People_Near_Rapid_Transit"]
        }
      ]
    },
    {
      "name": "filtered_data",
      "source": "country_data",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Country_Name === clicked_country && datum.People_Near_Rapid_Transit > 0 && datum.Population_Density > 0"
        }
      ]
    },
    {"name": "graticule", "transform": [{"type": "graticule"}]}
  ],
  "marks": [
    {
      "type": "group",
      "encode": {"enter": {"width": {"value": 600}, "height": {"value": 600}}},
      "marks": [
        {
          "type": "shape",
          "from": {"data": "oceans"},
          "transform": [{"type": "geoshape", "projection": "mercator"}],
          "encode": {
            "enter": {"fill": {"value": "#a2d4ec"}, "stroke": {"value": "none"}}
          }
        },
        {
          "type": "shape",
          "from": {"data": "world"},
          "transform": [{"type": "geoshape", "projection": "mercator"}],
          "encode": {
            "enter": {
              "fill": {"value": "#e0f3db"},
              "stroke": {"value": "#3182bd"}
            },
            "update": {
              "strokeWidth": {"value": 1.5},
              "cursor": {"value": "pointer"},
              "tooltip": {
                "signal": "{'Country': datum.properties.name, 'People Near Transit': datum.People_Near_Rapid_Transit, 'Population Density': datum.Population_Density}"
              }
            }
          }
        },
        {
          "type": "shape",
          "from": {"data": "graticule"},
          "transform": [{"type": "geoshape", "projection": "mercator"}],
          "encode": {
            "enter": {
              "stroke": {"value": "#cccccc"},
              "strokeWidth": {"value": 0.5}
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "encode": {
        "enter": {
          "width": {"value": 500},
          "height": {"value": 250},
          "x": {"value": 700},
          "y": {"value": 50}  
        }
      },
      "scales": [
        {
          "name": "xscale_top10",
          "type": "point",
          "domain": {"data": "top_10_countries", "field": "Year"},
          "range": [0, 400]
        },
        {
          "name": "yscale_top10",
          "type": "linear",
          "domain": {"data": "top_10_countries", "field": "People_Near_Rapid_Transit"},
          "range": [200, 0]  
        }
      ],
      "axes": [
        {
          "orient": "bottom",
          "scale": "xscale_top10",
          "title": "Year",
          "labelFontSize": {"value": 14},
          "titleFontSize": {"value": 16},
          "titlePadding": {"value": 10}
        },
        {
          "orient": "left",
          "scale": "yscale_top10",
          "title": "People Near Rapid Transit",
          "labelFontSize": {"value": 14},
          "titleFontSize": {"value": 16},
          "titlePadding": {"value": 10}
        }
      ],
      "marks": [
        {
          "type": "line",
          "from": {"data": "top_10_countries"},
          "encode": {
            "enter": {
              "x": {"scale": "xscale_top10", "field": "Year"},
              "y": {"scale": "yscale_top10", "field": "People_Near_Rapid_Transit"},
              "stroke": {"value": "green"},
              "strokeWidth": {"value": 2}
            },
            "update": {
              "tooltip": {"signal": "{'Country': datum.Country_Name, 'Year': datum.Year, 'People Near Rapid Transit': datum.People_Near_Rapid_Transit}"}
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "encode": {
        "enter": {
          "width": {"value": 500},
          "height": {"value": 300},
          "x": {"value": 700},
          "y": {"value": 350} 
        }
      },
      "scales": [
        {
          "name": "xscale",
          "type": "point",
          "domain": {"data": "filtered_data", "field": "Year"},
          "range": [0, 400]
        },
        {
          "name": "yscale_rpt",
          "type": "linear",
          "domain": {
            "data": "filtered_data",
            "field": "People_Near_Rapid_Transit"
          },
          "range": [300, 0] 
        },
        {
          "name": "yscale_pd",
          "type": "linear",
          "domain": {
            "data": "filtered_data",
            "field": "Population_Density"
          },
          "range": [300, 0]  
        }
      ],
      "axes": [
        {
          "orient": "bottom", 
          "scale": "xscale",
          "title": "Year",
          "labelFontSize": {"value": 14},
          "titleFontSize": {"value": 16},
          "titlePadding": {"value": 10}
        },
        {
          "orient": "left",
          "scale": "yscale_rpt",
          "title": "People Near Rapid Transit",
          "labelFontSize": {"value": 14},
          "titleFontSize": {"value": 16},
          "titlePadding": {"value": 10}
        },
        {
          "orient": "right",
          "scale": "yscale_pd",
          "title": "Population Density",
          "labelFontSize": {"value": 14},
          "titleFontSize": {"value": 16},
          "titlePadding": {"value": 10}
        }
      ],
      "marks": [
        {
          "type": "line",
          "from": {"data": "filtered_data"},
          "encode": {
            "enter": {
              "x": {"scale": "xscale", "field": "Year"},
              "y": {
                "scale": "yscale_rpt",
                "field": "People_Near_Rapid_Transit"
              },
              "stroke": {"value": "steelblue"},
              "strokeWidth": {"value": 3}
            },
            "update": {
              "tooltip": {"signal": "{'Year': datum.Year, 'People Near Rapid Transit': datum.People_Near_Rapid_Transit}"}
            }
          }
        },
        {
          "type": "line",
          "from": {"data": "filtered_data"},
          "encode": {
            "enter": {
              "x": {"scale": "xscale", "field": "Year"},
              "y": {"scale": "yscale_pd", "field": "Population_Density"},
              "stroke": {"value": "orange"},
              "strokeWidth": {"value": 3},
              "strokeDash": {"value": [5, 5]}
            },
            "update": {
              "tooltip": {"signal": "{'Year': datum.Year, 'Population Density': datum.Population_Density}"}
            }
          }
        }
      ]
    }
  ]
}
