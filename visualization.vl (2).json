{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 650,
  "autosize": {"type": "fit", "contains": "padding"},
  "params": [
    {
      "name": "year_selection",
      "value": 1975,
      "bind": {
        "input": "range",
        "min": 1975,
        "max": 2024,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/jarelgomes1/atlasitdp/refs/heads/main/Top_10_Countries_Data_For_Heatmap.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Population_Density > 0"},
    {"filter": "year(datum.Year) == year_selection"}
  ],
  "selection": {
    "hover": {
      "type": "single",
      "on": "mouseover",
      "empty": "none",
      "fields": ["Country_Name"],
      "nearest": true
    }
  },
  "encoding": {
    "y": {
      "field": "Country_Name",
      "type": "nominal",
      "axis": {
        "title": "Country",
        "labelAngle": 0,
        "grid": true,
        "labelFontSize": 10
      }
    },
    "color": {
      "field": "People_Near_Rapid_Transit",
      "type": "quantitative",
      "scale": {"scheme": "reds"},
      "legend": {
        "title": "People Near Rapid Transit",
        "orient": "bottom"
      }
    },
    "opacity": {
      "condition": {"selection": "hover", "value": 1},
      "value": 0.6
    },
    "tooltip": [
      {"field": "Country_Name", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "temporal", "title": "Year"},
      {
        "field": "People_Near_Rapid_Transit",
        "type": "quantitative",
        "title": "People Near Rapid Transit"
      },
      {
        "field": "Population_Density",
        "type": "quantitative",
        "title": "Population Density"
      }
    ]
  },
  "mark": "rect",
  "config": {"view": {"stroke": "transparent"}}
}
