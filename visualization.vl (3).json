{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Violin Plot showing top 10 countries with options for all countries, single country, and comparison.",
  "width": 600,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/jarelgomes1/atlasitdp/refs/heads/main/Top_10_Countries_Data_For_Heatmap.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "view_mode",
      "value": "Top 10",
      "bind": {
        "input": "select",
        "options": ["Top 10", "All countries", "Single country", "Compare two"],
        "labels": ["Top 10", "All countries", "Single country", "Compare two"],
        "name": "View mode: "
      }
    },
    {
      "name": "selected_country_single",
      "value": null,
      "bind": {
        "input": "select",
        "options": [
          null,
          "Argentina",
          "Brazil",
          "France",
          "Germany",
          "Mexico",
          "United States",
          "Australia",
          "Canada",
          "China",
          "Japan",
          "India",
          "Russia",
          "Singapore"
        ],
        "labels": [
          "All countries",
          "Argentina",
          "Brazil",
          "France",
          "Germany",
          "Mexico",
          "United States",
          "Australia",
          "Canada",
          "China",
          "Japan",
          "India",
          "Russia",
          "Singapore"
        ],
        "name": "Select a Country: ",
        "element": "Single country"
      }
    },
    {
      "name": "compare_country_1",
      "value": null,
      "bind": {
        "input": "select",
        "options": [
          "Argentina",
          "Brazil",
          "France",
          "Germany",
          "Mexico",
          "United States",
          "Australia",
          "Canada",
          "China",
          "Japan",
          "India",
          "Russia",
          "Singapore"
        ],
        "name": "Country 1: ",
        "element": "Compare two"
      }
    },
    {
      "name": "compare_country_2",
      "value": null,
      "bind": {
        "input": "select",
        "options": [
          "Argentina",
          "Brazil",
          "France",
          "Germany",
          "Mexico",
          "United States",
          "Australia",
          "Canada",
          "China",
          "Japan",
          "India",
          "Russia",
          "Singapore"
        ],
        "name": "Country 2: ",
        "element": "Compare two"
      }
    }
  ],
  "transform": [
    {
      "filter": "view_mode == 'Top 10' || (view_mode == 'All countries' && datum.Country_Name) || (view_mode == 'Single country' && datum.Country_Name == selected_country_single) || (view_mode == 'Compare two' && (datum.Country_Name == compare_country_1 || datum.Country_Name == compare_country_2))"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "area",
        "orient": "vertical",
        "interpolate": "monotone",
        "fill": "lightblue",
        "opacity": 0.6
      },
      "encoding": {
        "x": {
          "field": "People_Near_Rapid_Transit",
          "type": "quantitative",
          "axis": {"title": "People Near Rapid Transit"}
        },
        "y": {
          "field": "Country_Name",
          "type": "nominal",
          "axis": {"title": "Country"}
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "size": 80,
        "opacity": 0.85
      },
      "encoding": {
        "x": {"field": "People_Near_Rapid_Transit", "type": "quantitative"},
        "y": {"field": "Country_Name", "type": "nominal"},
        "color": {
          "field": "Country_Name",
          "type": "nominal",
          "scale": {"scheme": "cividis"}
        },
        "tooltip": [
          {"field": "Country_Name"},
          {"field": "People_Near_Rapid_Transit"}
        ]
      }
    }
  ],
  "config": {
    "legend": {
      "orient": "bottom",
      "direction": "horizontal"
    }
  }
}
