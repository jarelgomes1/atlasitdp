{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A line chart showing People Near Rapid Transit over time for the top 10 countries in specific years.",
  "width": 350, 
  "height": 500, 
  "data": {
    "url": "https://raw.githubusercontent.com/jarelgomes1/atlasitdp/refs/heads/main/Top_10_Countries_Per_Year_Population_Near_Rapid_Transit.csv",
    "format": {"type": "csv"}
  },
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "People_Near_Rapid_Transit",
      "type": "quantitative",
      "axis": {"title": "People Near Rapid Transit"}
    },
    "color": {
      "field": "Country_Name",
      "type": "nominal",
      "scale": {
        "domain": [
          "Austria", "Czechia", "Denmark", 
          "France", "Germany", "Norway", 
          "Spain", "Sweden", "Switzerland", 
          "Vatican City"
        ],
        "range": [
          "#1f77b4", "#ff7f0e", "#2ca02c", 
          "#d62728", "#9467bd", "#8c564b", 
          "#e377c2", "#7f7f7f", "#bcbd22", 
          "#17becf"
        ] 
      },
      "legend": {
        "title": "Country",
        "orient": "bottom",
        "columns": 4 
      }
    },
    "tooltip": [
      {"field": "Year", "type": "temporal", "title": "Year"},
      {
        "field": "People_Near_Rapid_Transit",
        "type": "quantitative",
        "title": "People Near Rapid Transit"
      },
      {"field": "Country_Name", "type": "nominal", "title": "Country"}
    ]
  },
  "config": {}
}
